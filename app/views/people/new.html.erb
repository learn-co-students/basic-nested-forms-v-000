<%= form_for @person do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>
  <%= f.fields_for :addresses do |addr| %><br>
    <%= addr.label :address %><br><br>

    <%= addr.label :street_address_1 %><br>
    <%= addr.text_field :street_address_1 %><br>

    <%= addr.label :street_address_2 %><br>
    <%= addr.text_field :street_address_2 %><br>

    <%= addr.label :city %><br>
    <%= addr.text_field :city %><br>

    <%= addr.label :state %><br>
    <%= addr.text_field :state %><br>

    <%= addr.label :zipcode %><br>
    <%= addr.text_field :zipcode %><br>

    <%= addr.label :address_type %><br>
    <%= addr.text_field :address_type %><br><br>

  <% end %>
 <%= f.submit %>
<% end %>
