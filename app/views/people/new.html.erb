  <%= f.text_field :name %> <br /><br />
  <%= f.fields_for :addresses do |addrss| %>
  <%= addrss.label :street_address_1 %>
  <%= addrss.text_field :street_address_1 %><br>

    <%= addrss.label :street_address_2 %>
    <%= addrss.text_field :street_address_2 %><br>

    <%= addrss.label :city %>
    <%= addrss.text_field :city %><br>

    <%= addrss.label :state %>
    <%= addrss.text_field :state %><br>

